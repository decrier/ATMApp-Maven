<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="app.controllers.TransferController"
            stylesheets="/app/styles/style.css">
    <VBox spacing="20" alignment="CENTER" AnchorPane.rightAnchor="20.0"
          AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0"
          AnchorPane.topAnchor="20.0" styleClass="vbox">

        <Label text="Empfänger-Kartennummer" styleClass="label-title"/>
        <TextField fx:id="recipientCardField" promptText="Kartennummer" />

        <Label text="Betrag" styleClass="label-title"/>
        <TextField fx:id="amountField" promptText="Betrag" styleClass="text-field"/>

        <Button text="Überweisen" onAction="#handleTransfer" styleClass="button"/>
        <Label fx:id="statusLabel" styleClass="action-label"/>
        <Button text="Zurück" onAction="#handleBack" styleClass="button"/>
    </VBox>
</AnchorPane>
